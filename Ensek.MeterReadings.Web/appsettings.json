{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            // Log SQL commands generated by EF Core (useful for debugging, can be noisy)
            "Microsoft.EntityFrameworkCore.Database.Command": "Information"
        }
    },
    "AllowedHosts": "*", // Restrict in production
    "ApplyMigrationsOnStartup": true, // Set to true to apply migrations automatically (useful for dev/demo)
    "ConnectionStrings": {
        // --- IMPORTANT: CONFIGURE YOUR ACTUAL CONNECTION STRING HERE ---
        // Store sensitive parts (Password/User ID) securely using:
        // 1. User Secrets (for development): dotnet user-secrets set "ConnectionStrings:DefaultConnection" "Your_Full_Connection_String"
        // 2. Environment Variables (for production/staging)
        // 3. Azure Key Vault / AWS Secrets Manager etc. (for cloud)

        // Example using SQL Server Authentication (replace placeholders)
        //"DefaultConnection": "Server=your_server_name_or_ip;Database=EnsekMeterReadings;User ID=your_sql_user;Password=your_strong_password;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"

        // Example using Windows Authentication (Trusted Connection - for local dev or domain environments)
        // "DefaultConnection": "Server=your_server_name_or_ip;Database=EnsekMeterReadings;Trusted_Connection=True;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"

        // Example for LocalDB (often used in Visual Studio development)
        "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=EnsekMeterReadings;Trusted_Connection=True;MultipleActiveResultSets=true"
    }
}