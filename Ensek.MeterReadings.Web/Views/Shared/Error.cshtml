@model Ensek.MeterReadings.Web.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5 text-center">
    <h1 class="display-1 text-danger">Error.</h1>
    <h2 class="text-danger">An error occurred while processing your request.</h2>

    @* Display the Request ID if available, useful for correlating with server logs *@
    @if (Model?.ShowRequestId ?? false)
    {
        <p class="mt-4">
            <strong class="text-danger">Request ID:</strong> <code class="user-select-all">@Model.RequestId</code>
        </p>
        <p class="text-muted">If you contact support, please provide this ID.</p>
    }

    <p class="mt-4">
        We apologize for the inconvenience. Please try again later, or contact support if the problem persists.
    </p>

    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
        <i class="bi bi-house-door-fill me-1"></i> Go to Homepage
    </a>

</div>