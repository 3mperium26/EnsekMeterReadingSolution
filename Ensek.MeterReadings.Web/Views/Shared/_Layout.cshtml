<!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Ensek Meter Reads</title>
    @* Favicon Link (optional) - Create a favicon.ico file in wwwroot *@
    @* <link rel="icon" href="~/favicon.ico" type="image/x-icon"> *@

    @* Bootstrap CSS from CDN *@
        <link href="[https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css](https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css)" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    @* Bootstrap Icons from CDN - Used in Views *@
         <link rel="stylesheet" href="[https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css](https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css)">


    @* Site-specific CSS - references wwwroot/css/site.css *@
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @* Render page-specific styles defined using @section Styles { ... } in individual views *@
    @await RenderSectionAsync("Styles", required: false)
    </head>
    <body>
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                @* Brand/Logo linking to Home/Index *@
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                       <i class="bi bi-speedometer2 me-2 text-primary"></i> @* Example icon *@
                       Ensek Meter Readings
                    </a>
                @* Navbar toggler for smaller screens *@
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                @* Navbar content *@
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                            @* Link to the Upload page (Home/Index) - Add 'active' class if current page *@
                                <a class="nav-link text-dark @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")"
                                   asp-area="" asp-controller="Home" asp-action="Index">
                                   <i class="bi bi-cloud-upload me-1"></i>Upload
                                </a>
                            </li>
                             <li class="nav-item">
                            @* Link to Swagger API documentation (opens in new tab) *@
                                <a class="nav-link text-dark" href="/swagger" target="_blank">
                                    <i class="bi bi-file-code me-1"></i>API Docs
                                </a>
                            </li>
                        @* Add other navigation items here if needed *@
                        @* <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li> *@
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
        @* Main content area where individual views will be rendered *@
            <main role="main" class="pb-5"> @* Added padding-bottom *@
            @RenderBody()
            </main>
        </div>

    @* Footer section *@
        <footer class="border-top footer text-muted mt-auto py-3 bg-light">
            <div class="container text-center">
                &copy; @DateTime.Now.Year - Ensek Meter Read Updload Tool Demo Application
            @* Optional: Add privacy policy link or other footer content *@
            @* - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a> *@
            </div>
        </footer>

    @* Bootstrap JS Bundle (includes Popper for tooltips, popovers, dropdowns) from CDN *@
        <script src="[https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js](https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js)" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    @* Site-specific JS - references wwwroot/js/site.js *@
        <script src="~/js/site.js" asp-append-version="true"></script>

    @* Render page-specific scripts defined using @section Scripts { ... } in individual views (like validation scripts) *@
    @await RenderSectionAsync("Scripts", required: false)
    </body>
    </html>